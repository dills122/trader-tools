{
  "name": "admin-ui",
  "version": "0.1.1",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "watch": "ng build --watch --configuration development",
    "test:ui": "ng test",
    "test": "echo \"Use test:ui command to run ui tests\" && exit 0",
    "dev:ssr": "ng run admin-ui:serve-ssr",
    "serve:ssr": "node dist/admin-ui/server/main.js",
    "build:ssr": "ng build && ng run admin-ui:server",
    "build": "echo \"Use build:ssr for build process\" && exit 0",
    "prerender": "ng run admin-ui:prerender",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "pm2": "pm2 start processes.json --no-daemon",
    "start:dev": "npx ng serve --host 0.0.0.0 --disable-host-check"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~13.2.2",
    "@angular/common": "~13.2.2",
    "@angular/compiler": "~13.2.2",
    "@angular/core": "~13.2.2",
    "@angular/forms": "~13.2.2",
    "@angular/platform-browser": "~13.2.2",
    "@angular/platform-browser-dynamic": "~13.2.2",
    "@angular/platform-server": "~13.2.2",
    "@angular/router": "~13.2.2",
    "@nguniversal/express-engine": "^13.0.2",
    "express": "~4.17.1",
    "memory-cache": "^0.2.0",
    "rxjs": "~7.5.4",
    "tslib": "^2.2.0",
    "zone.js": "~0.11.4",
    "@nguniversal/common": "~13.0.2",
    "pm2": "^5.1.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~13.2.3",
    "@angular/cli": "~13.2.3",
    "@angular/compiler-cli": "~13.2.2",
    "@nguniversal/builders": "^13.0.2",
    "@types/express": "~4.17.11",
    "@types/jasmine": "~3.8.0",
    "@types/memory-cache": "^0.2.1",
    "@types/node": "~17.0.18",
    "jasmine-core": "~4.0.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "~1.7.0",
    "typescript": "4.5.5",
    "@typescript-eslint/eslint-plugin": "~5.12.0",
    "@typescript-eslint/parser": "~5.12.0",
    "eslint": "~8.10.0"
  }
}

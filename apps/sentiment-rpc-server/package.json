{
  "name": "sentiment-rpc-server",
  "version": "0.2.12",
  "description": "",
  "scripts": {
    "build": "tsc -p .",
    "build:proto": "sh ./scripts/protoc/protoc.sh",
    "cert:gen": "sh ./scripts/cert-gen/generate.sh",
    "compile": "tsc",
    "clean": "tsc --build --clean && rm -rf ./types",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "start:dev": "ts-node-dev --respawn --transpile-only ./server.ts",
    "start": "node server.js",
    "test": "mocha -r ts-node/register \"test/**/*.spec.ts\"",
    "pm2": "pm2 start processes.json --no-daemon"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@grpc/grpc-js": "^1.3.6",
    "@grpc/proto-loader": "~0.7.3",
    "dotenv": "~16.3.1",
    "google-protobuf": "^3.17.3",
    "sentiment-service": "workspace:~0.2.12",
    "grpc-tools": "workspace:~0.2.12",
    "pm2": "^5.1.0"
  },
  "devDependencies": {
    "@types/chai": "~4.3.0",
    "@types/google-protobuf": "^3.15.3",
    "@types/mocha": "~10.0.0",
    "@types/node": "~20.8.0",
    "@typescript-eslint/eslint-plugin": "5.61.0",
    "@typescript-eslint/parser": "5.61.0",
    "eslint": "~8.51.0",
    "@types/sinon": "~10.0.11",
    "chai": "~4.3.6",
    "mocha": "~10.2.0",
    "sinon": "~17.0.0",
    "ts-node": "~10.9.1",
    "typescript": "~5.2.2",
    "ts-node-dev": "^2.0.0"
  }
}
